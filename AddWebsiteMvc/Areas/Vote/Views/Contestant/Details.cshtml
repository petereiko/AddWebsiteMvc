@model Contestant
@{
    ViewData["Title"] = "Contestant Details";
    Layout = "~/Views/Shared/_VoteLayout.cshtml";
}

<div class="details-container">
    <!-- Back Button -->
    <div class="back-navigation">
        <a href="@Url.Action("Index", "Contestant", new { Area = "Vote" })" class="back-btn">
            <span>←</span> Back to All Contestants
        </a>
    </div>

    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-image" style="background-image: url('@Model.passportFileName')">
            <div class="hero-overlay">
                <div class="contestant-badge">
                    Contestant #@Model.id
                </div>
                <div class="vote-badge-large">
                    <i class="vote-icon">❤️</i>
                    <span class="vote-number">@Model.voteCount</span>
                    <span class="vote-label">Total Votes</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="content-wrapper">
        <!-- Profile Header -->
        <div class="profile-header">
            <div class="profile-info">
                <h1 class="contestant-name">@Model.firstName @Model.lastName</h1>
                <div class="quick-stats">
                    <div class="stat-item">
                        <span class="stat-label">Age</span>
                        <span class="stat-value">@Model.dob years</span>
                    </div>
                    <div class="stat-divider"></div>
                    <div class="stat-item">
                        <span class="stat-label">Talent</span>
                        <span class="stat-value">@Model.talent</span>
                    </div>
                </div>
            </div>
            <div class="vote-action">
                <button class="vote-btn-primary" onclick="selectContestant('@Model.id')">
                    <span class="btn-icon">🗳️</span>
                    Vote for @Model.firstName
                </button>
                <p class="vote-reminder">You can only vote once</p>
            </div>
        </div>

        <!-- Details Grid -->
        <div class="details-grid">
            <!-- About Section -->
            <div class="detail-card">
                <div class="card-header">
                    <h2>About @Model.firstName</h2>
                </div>
                <div class="card-content">
                    <p class="bio-text">@Model.shortNote</p>
                </div>
            </div>

            <!-- Personal Information -->
            <div class="detail-card">
                <div class="card-header">
                    <h2>Personal Information</h2>
                </div>
                <div class="card-content">
                    <div class="info-list">
                        <div class="info-item">
                            <div class="info-icon">👤</div>
                            <div class="info-details">
                                <span class="info-label">Full Name</span>
                                <span class="info-value">@Model.firstName @Model.lastName</span>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-icon">🎂</div>
                            <div class="info-details">
                                <span class="info-label">Age</span>
                                <span class="info-value">@Model.dob years old</span>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-icon">⭐</div>
                            <div class="info-details">
                                <span class="info-label">Talent</span>
                                <span class="info-value">@Model.talent</span>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-icon">❤️</div>
                            <div class="info-details">
                                <span class="info-label">Vote Count</span>
                                <span class="info-value vote-highlight">@Model.voteCount votes</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Video Section -->
            @if (!string.IsNullOrEmpty(Model.videoFileName))
            {
                <div class="video-container">
                    @* <div class="video-header">
                        <h1>🎬 Video Player</h1>
                        <p>Watch the video</p>
                    </div> *@

                    <div class="video-wrapper">
                        <div class="video-player">
                            <!-- Method 1: Using a video file path -->
                            <video controls preload="metadata" poster="https://via.placeholder.com/900x506/16a34a/ffffff?text=Video+Thumbnail">
                                <source src="@Model.videoFileName" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </div>
                    </div>
                </div>
            }

            <!-- Call to Action -->
            <div class="detail-card cta-card">
                <div class="card-content">
                    <h3>Support @Model.firstName</h3>
                    <p>Cast your vote and help @Model.firstName win this competition!</p>
                    <button class="vote-btn-secondary" onclick="selectContestant('@Model.id')">
                        Vote Now
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Vote Confirmation Modal -->
<div id="voteModal" class="modal">
    <div class="modal-content">
        <span class="close-modal">&times;</span>
        <div class="modal-header">
            <h2>Confirm Your Vote</h2>
        </div>
        <div class="modal-body">
            <div class="contestant-preview">

                <h3>@Model.firstName @Model.lastName</h3>
                <p>Contestant #@Model.id</p>
                <div>
                    <input type="text" placeholder="Your First Name" id="voterfirstname" class="vote-input" />
                </div>
                <div>
                    <input type="text" placeholder="Your Last Name" id="voterlastname" class="vote-input" />
                </div>
                <div>Please note that a vote costs ₦ @Model.votePrice?.ToString("N2")</div>

                <div class="form-group">
                    <input type="number" onkeyup="CalulateAmount()" id="number" name="number" class="vote-input"
                           placeholder="How much votes are you giving to @Model.firstName" />
                </div>

            </div>
            <p class="warning-text" id="output">⚠️ You are paying . Are you sure you want to vote for @Model.firstName?</p>

            <script>
                function CalulateAmount(){
                    if(!isNaN(document.getElementById("number").value)){
                    const name = '@Model.firstName';
                    const amount = @Model.votePrice.GetValueOrDefault();
                    const numVotes = Number(document.getElementById("number").value);
                    let netPrice = amount*numVotes;
                    let output = `⚠️ You are paying <b>₦${netPrice}</b>. Are you sure you want to give ${name} <strong>${numVotes}</strong> vote(s)?`;
                    document.getElementById('output').innerHTML = output;
                    }
                }
            </script>
        </div>
        <div class="modal-footer">
            <button class="btn-cancel" onclick="closeVoteModal()">Cancel</button>
            <button class="btn-confirm" onclick="confirmVote('@Model.id')">Confirm Vote</button>
        </div>
    </div>
</div>



