    <script>
        let candidates = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Data.Candidates));
        let hasElectionStarted = @HasElectionStarted.ToString().ToLower();
        let candidateCategories = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Data.CandidateCategories));
        let stateCategoryLimits = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Data.StateCategoryLimits));
        let votingStartDate = new Date("@Model.Data.Election.StartDate.ToString("o")");

        console.log(votingStartDate);

        const emails = new Set(JSON.parse(localStorage.getItem("votedVoterIds") || "[]"));
        let currentVoteCandidate = null;
        let countdownInterval = null;
        let items = [];

        function init() {
            renderCandidates(candidates);
            updateStats(candidates);
            setupEventListeners();
            renderLegend();
        }

        function getTimeRemaining(targetDate) {
            const now = new Date();
            const total = targetDate - now;
            if (total <= 0) return { total: 0, days: 0, hours: 0, minutes: 0, seconds: 0 };
            return {
                total,
                days: Math.floor(total / (1000 * 60 * 60 * 24)),
                hours: Math.floor((total / (1000 * 60 * 60)) % 24),
                minutes: Math.floor((total / 1000 / 60) % 60),
                seconds: Math.floor((total / 1000) % 60)
            };
        }

        function padZero(num) { return num.toString().padStart(2, '0'); }

        function generateCountdownHTML() {
            const time = getTimeRemaining(votingStartDate);
            if (time.total <= 0) {
                return '<div class="countdown-wrapper"><div class="countdown-ended"><div class="countdown-ended-icon"><i class="fas fa-check"></i></div><div class="countdown-ended-text">Voting is Now Open!</div><div class="countdown-ended-subtext">Cast your vote for your preferred candidate</div></div></div>';
            }
            const formattedDate = votingStartDate.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' });
            return '<div class="countdown-wrapper"><div class="countdown-header"><div class="countdown-icon"><i class="fas fa-hourglass-half"></i></div><h3 class="countdown-title">Voting Opens Soon</h3></div><p class="countdown-subtitle">' + formattedDate + '</p><div class="countdown-timer" id="countdownTimer"><div class="countdown-unit"><div class="countdown-value-wrapper"><span class="countdown-value" id="countdownDays">' + padZero(time.days) + '</span></div><span class="countdown-label">Days</span></div><div class="countdown-separator"><span>:</span></div><div class="countdown-unit"><div class="countdown-value-wrapper"><span class="countdown-value" id="countdownHours">' + padZero(time.hours) + '</span></div><span class="countdown-label">Hours</span></div><div class="countdown-separator"><span>:</span></div><div class="countdown-unit"><div class="countdown-value-wrapper"><span class="countdown-value" id="countdownMinutes">' + padZero(time.minutes) + '</span></div><span class="countdown-label">Minutes</span></div><div class="countdown-separator"><span>:</span></div><div class="countdown-unit"><div class="countdown-value-wrapper"><span class="countdown-value" id="countdownSeconds">' + padZero(time.seconds) + '</span></div><span class="countdown-label">Seconds</span></div></div><div class="countdown-message"><i class="fas fa-bell"></i><span>Get ready to make your voice heard!</span></div></div>';
        }

        function updateCountdown() {
            const time = getTimeRemaining(votingStartDate);
            if (time.total <= 0) { clearInterval(countdownInterval); renderLegend(); return; }
            const d = document.getElementById('countdownDays'), h = document.getElementById('countdownHours'), m = document.getElementById('countdownMinutes'), s = document.getElementById('countdownSeconds');
            if (d) d.textContent = padZero(time.days);
            if (h) h.textContent = padZero(time.hours);
            if (m) m.textContent = padZero(time.minutes);
            if (s) s.textContent = padZero(time.seconds);
        }

        function renderLegend() {
            const legendGrid = document.getElementById("legendGrid");
            if (countdownInterval) clearInterval(countdownInterval);
            if (!stateCategoryLimits || stateCategoryLimits.length === 0) {
                legendGrid.innerHTML = generateCountdownHTML() + '<div class="legend-item" style="grid-column: 1 / -1; justify-content: center;"><div class="legend-state-info"><div class="state-flag"><i class="fas fa-info-circle"></i></div><div class="state-details"><h4>No votes yet</h4><span>No Vote/Category distribution yet</span></div></div></div>';
            } else {
                legendGrid.innerHTML = generateCountdownHTML() + stateCategoryLimits.map(item => '<div class="legend-item"><div class="legend-state-info"><div class="state-flag"><i class="fas fa-landmark"></i></div><div class="state-details"><h4>' + (item.StateName || item.stateName || 'Unknown State') + '</h4><span>' + (item.CategoryName || item.categoryName || 'All Categories') + '</span></div></div><div class="legend-votes"><div class="vote-count">' + (item.MaxVotes || item.maxVotes || 0).toLocaleString() + '</div><div class="vote-label">Max Votes</div></div></div>').join('');
            }
            countdownInterval = setInterval(updateCountdown, 1000);
        }

        function toggleLegend() { document.getElementById("legendContainer").classList.toggle("collapsed"); }

        function setupEventListeners() {
            document.getElementById("searchInput").addEventListener("input", handleSearch);
            document.getElementById("voteForm").addEventListener("submit", handleVoteSubmit);
        }

        function renderCandidates(candidatesToRender) {
            const grid = document.getElementById("candidatesGrid"), noResults = document.getElementById("noResults");
            if (candidatesToRender.length === 0) { grid.style.display = "none"; noResults.style.display = "block"; return; }
            grid.style.display = "grid"; noResults.style.display = "none";
            grid.innerHTML = candidatesToRender.map((candidate, index) => hasElectionStarted ?
                '<div class="candidate-card" style="animation-delay: ' + (index * 0.05) + 's; height:600px !important"><div><img src="' + candidate.PassportFileName + '" alt="' + candidate.FirstName + '" style="width:100%; height:500px; object-fit: cover"><div class="candidate-badge">' + candidate.StateName + ' State</div></div><div><div class="candidate-actions"><button class="btn btn-vote" onclick="initiateVote(\'' + candidate.Id + '\')"><i class="fas fa-vote-yea"></i>Cast Vote (<span class="party-abbr">Votes: ' + candidate.VoteCount + '</span>)</button></div></div></div>' :
                '<div class="candidate-card" style="animation-delay: ' + (index * 0.05) + 's; height:500px !important"><div><img src="' + candidate.PassportFileName + '" alt="' + candidate.FirstName + '" style="width:100%; height:500px; object-fit: cover"><div class="candidate-badge">' + candidate.StateName + ' State</div></div></div>'
            ).join("");
            updateStats(candidatesToRender);
        }

        function updateStats(candidatesToDisplay) {
            document.getElementById("totalCandidates").textContent = candidates.length;
            document.getElementById("displayedCandidates").textContent = candidatesToDisplay.length;
        }

        function handleSearch(e) {
            const searchTerm = e.target.value.toLowerCase();
            let filtered = candidates;
            if (searchTerm) filtered = filtered.filter(c => c.FirstName.toLowerCase().includes(searchTerm) || c.LastName.toLowerCase().includes(searchTerm) || c.StateName.toLowerCase().includes(searchTerm));
            renderCandidates(filtered);
        }

        let _candidateId = 0;

        function initiateVote(candidateId) {
            _candidateId = candidateId;
            const candidate = candidates.find(c => c.Id === candidateId);
            if (!candidate) return;
            let filteredCategories = candidateCategories.filter(c => c.CandidateId == candidateId);
            let html = '<option value="">--Select Category--</option>';
            filteredCategories.forEach(cat => { html += '<option value="' + cat.CategoryId + '">' + cat.Category + '</option>'; });
            document.getElementById("category").innerHTML = html;
            currentVoteCandidate = candidate;
            document.getElementById("voteCandidate").textContent = candidate.Title + " " + candidate.FirstName + " " + candidate.LastName;
            document.getElementById("voteState").textContent = candidate.StateName;
            document.getElementById("email").value = "";
            document.getElementById("firstName").value = "";
            document.getElementById("surname").value = "";
            items = [];
            LoadTable(items);
            document.getElementById("voteModal").classList.add("active");
            document.body.style.overflow = "hidden";
        }

        function AddItem() {
            let cat = document.getElementById("category"), vc = document.getElementById("voteCountForm");
            if (cat.value === "") { cat.focus(); cat.style.borderColor = "red"; return; }
            if (vc.value === "") { vc.focus(); vc.style.borderColor = "red"; return; }
            let voteCount = Number(vc.value);
            if (voteCount <= 0) { vc.focus(); vc.style.borderColor = "red"; return; }
            let item = { id: Math.random().toString(16).slice(2), categoryName: cat.options[cat.selectedIndex].text, voteCount: voteCount, categoryId: cat.value };
            if (items.find(x => x.categoryId == item.categoryId)) { alert("You have already added votes for this category."); return; }
            items = [...items, item];
            LoadTable(items);
            cat.style.borderColor = ""; vc.style.borderColor = "";
        }

        function DeleteItem(id) { items = items.filter(x => x.id !== id); LoadTable(items); }

        function LoadTable(items) {
            let html = '', price = @Model.Data.VotePrice.Price, totalPrice = 0;
            if (items.length === 0) { html = '<tr><td colspan="6"><center>No vote has been added yet</center></td></tr>'; }
            else { items.forEach((item, index) => { totalPrice += item.voteCount * price; html += '<tr><td>' + (index + 1) + '</td><td>' + item.categoryName + '</td><td>' + item.voteCount + '</td><td>' + (item.voteCount * price) + '</td><td><button type="button" style="font-size:12px;color:white !important; background-color:red !important" class="btn btn-delete" onclick="DeleteItem(\'' + item.id + '\')"><i class="fas fa-trash"></i></button></td></tr>'; }); }
            document.getElementById("lbltotalamount").innerHTML = '₦' + totalPrice;
            document.getElementById("categoryTableBody").innerHTML = html;
        }

        function handleVoteSubmit(e) {
            e.preventDefault();
            const email = document.getElementById("email").value.trim(), firstName = document.getElementById("firstName").value.trim(), surname = document.getElementById("surname").value.trim(), submitBtn = document.getElementById("submitVoteBtn");
            if (firstName == "") { document.getElementById("lblmessage").innerHTML = '<span style="color:red; background-color:pink; width:100%; padding:10px; border-radius:3px">First name is required</span>'; document.getElementById("firstName").focus(); return; }
            if (surname == "") { document.getElementById("lblmessage").innerHTML = '<span style="color:red; background-color:pink; width:100%; padding:10px; border-radius:3px">Surname is required</span>'; document.getElementById("surname").focus(); return; }
            const emailRegex = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$/;
            if (!emailRegex.test(email)) { document.getElementById("lblmessage").innerHTML = '<span style="color:red; background-color:pink; width:100%; padding:10px; border-radius:3px">Invalid email address</span>'; document.getElementById("email").focus(); return; }
            document.getElementById("lblmessage").innerHTML = "";
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="loading"></span> Processing...';
            setTimeout(() => {
                emails.add(email);
                localStorage.setItem("votedVoterIds", JSON.stringify([...emails]));
                const referenceNumber = "LG-" + Date.now().toString(36).toUpperCase() + "-" + Math.random().toString(36).substring(2, 8).toUpperCase();
                const timestamp = new Date().toLocaleString("en-US", { dateStyle: "long", timeStyle: "short" });
                document.getElementById("referenceNumber").textContent = referenceNumber;
                document.getElementById("voteTimestamp").textContent = timestamp;
                document.getElementById("confirmedVoterId").textContent = email;
                closeVoteModal();
                document.getElementById("successModal").classList.add("active");
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-check"></i> Confirm Vote';
                $.ajax({
                    url: '@Url.Action("Vote", "Candidates", new { Area = "Gov" })',
                    type: 'post',
                    dataType: 'json',
                    data: { email: email, firstName: firstName, lastName: surname, candidateId: _candidateId, categoryItems: items },
                    success: function(response) {
                        if (response.success) { location.href = response.data.authorizationUrl; }
                        else { document.getElementById("successModal").classList.remove("active"); document.getElementById("errorModal").classList.add("active"); document.getElementById('errordetails').innerHTML = response.message; }
                    },
                    error: function(err) { document.getElementById("successModal").classList.remove("active"); document.getElementById("errorModal").classList.add("active"); document.getElementById('errordetails').innerHTML = err.responseText; }
                });
            }, 2000);
        }

        function closeVoteModal() { document.getElementById("voteModal").classList.remove("active"); document.body.style.overflow = "auto"; }
        function closeSuccessModal() { document.getElementById("successModal").classList.remove("active"); document.body.style.overflow = "auto"; }
        function closeErrorModal() { document.getElementById("errorModal").classList.remove("active"); document.body.style.overflow = "auto"; }

        document.querySelectorAll(".modal").forEach(modal => {
            modal.addEventListener("click", function(e) { if (e.target === this) { this.classList.remove("active"); document.body.style.overflow = "auto"; } });
        });

        init();
