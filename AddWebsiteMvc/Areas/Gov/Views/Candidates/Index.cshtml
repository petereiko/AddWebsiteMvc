    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script>
        // Sample candidate data with stock image URLs
        let candidates=@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.data));


        console.log(candidates);
        

        // Anti-spam tracking
        const emails = new Set(
          JSON.parse(localStorage.getItem("votedVoterIds") || "[]")
        );
        let currentVoteCandidate = null;
        let currentDetailsCandidate = null;
        //let totalVotesCount = parseInt(localStorage.getItem("totalVotes") || "0");

        // Initialize
        function init() {
          renderCandidates(candidates);
          updateStats(candidates);
          setupEventListeners();
          //updateVoteCount();
        }

        function setupEventListeners() {
          document
            .getElementById("searchInput")
            .addEventListener("input", handleSearch);

          // Filter buttons
          document.querySelectorAll(".filter-btn").forEach((btn) => {
            btn.addEventListener("click", function () {
              document
                .querySelectorAll(".filter-btn")
                .forEach((b) => b.classList.remove("active"));
              this.classList.add("active");

              const filter = this.dataset.filter;
              if (filter === "all") {
                renderCandidates(candidates);
              } else {
                const filtered = candidates.filter((c) => c.category === filter);
                renderCandidates(filtered);
              }
            });
          });

          // Vote form submission
          document
            .getElementById("voteForm")
            .addEventListener("submit", handleVoteSubmit);
        }

        function renderCandidates(candidatesToRender) {
          const grid = document.getElementById("candidatesGrid");
          const noResults = document.getElementById("noResults");

          if (candidatesToRender.length === 0) {
            grid.style.display = "none";
            noResults.style.display = "block";
            return;
          }

          grid.style.display = "grid";
          noResults.style.display = "none";

          grid.innerHTML = candidatesToRender
            .map(
              (candidate, index) => `
                      <div class="candidate-card" style="animation-delay: ${index * 0.05}s; height:600px !important">
                      <div class="">
                          <img src="${candidate.passportFileName}" alt="${candidate.firstName}" style="width:100%; height:500px;bject-fit: cover">
                          <div class="candidate-badge">${candidate.stateName} State</div>
                      </div>
                      <div class="">
                          <div class="candidate-actions">
                              <button class="btn btn-vote" onclick="initiateVote('${candidate.id}')">
                                  <i class="fas fa-vote-yea"></i>
                                      Cast Vote (<span class="party-abbr">Votes: ${candidate.voteCount}</span>)
                              </button>
                          </div>
                      </div>
                  </div>
              `
            )
            .join("");

          updateStats(candidatesToRender);
        }

        function updateStats(candidatesToDisplay) {
          document.getElementById("totalCandidates").textContent =
            candidates.length;
          document.getElementById("displayedCandidates").textContent =
            candidatesToDisplay.length;

          // const uniqueParties = new Set(candidates.map((c) => c.party));
          // document.getElementById("totalPartiestotalParties").textContent =
          //   uniqueParties.size;
        }

        // function updateVoteCount() {
        //   document.getElementById("totalVotes").textContent = totalVotesCount;
        // }

        function handleSearch(e) {
          const searchTerm = e.target.value.toLowerCase();
          // const activeFilter =
          //   document.querySelector(".filter-btn.active").dataset.filter;

          let filtered = candidates;

          // if (activeFilter !== "all") {
          //   filtered = filtered.filter((c) => c.category === activeFilter);
          // }

          if (searchTerm) {
            filtered = filtered.filter((candidate) => {
              return (
                candidate.firstName.toLowerCase().includes(searchTerm) ||
                candidate.lastName.toLowerCase().includes(searchTerm) ||
                candidate.stateName.toLowerCase().includes(searchTerm)
              );
            });
          }

          renderCandidates(filtered);
        }

        let _candidateId=0;

        function initiateVote(candidateId) {
            console.log(candidateId);
            _candidateId=candidateId;
            const candidate = candidates.find((c) => c.id === candidateId);
          if (!candidate) return;

          currentVoteCandidate = candidate;

          document.getElementById("voteCandidate").textContent = candidate.title+" "+ candidate.firstName+" "+candidate.lastName;
          
          document.getElementById("voteState").textContent = candidate.stateName;

          document.getElementById("email").value = "";
          document.getElementById("voteCount").value = "";
          document.getElementById("firstName").value="";
          document.getElementById("surname").value="";

          document.getElementById("voteModal").classList.add("active");
          document.body.style.overflow = "hidden";
        }

        function handleVoteSubmit(e) {
          e.preventDefault();

          const email = document.getElementById("email").value.trim();
          const firstName = document.getElementById("firstName").value.trim();
          const surname = document.getElementById("surname").value.trim();
          const voteCount = document.getElementById("voteCount").value.trim();
          const submitBtn = document.getElementById("submitVoteBtn");

          if(firstName==""){
                  document.getElementById("lblmessage").innerHTML = '<span style="color:red; background-color:pink; width:100%; padding:10px; border-radius:3px">First name is required</span>';
                        document.getElementById("firstName").focus();
                    return;
          }
              if(surname==""){
                      document.getElementById("lblmessage").innerHTML = '<span style="color:red; background-color:pink; width:100%; padding:10px; border-radius:3px">Surname is required</span>';
                            document.getElementById("surname").focus();
                        return;
              }

          // Validation
          const emailRegex = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$/;
    //return regex.test(email);
        if(!emailRegex.test(email)){
            document.getElementById("lblmessage").innerHTML = '<span style="color:red; background-color:pink; width:100%; padding:10px; border-radius:3px">Invalid email address</span>';
                document.getElementById("email").focus();
                return;
    }

            if (voteCount<0) {
            document.getElementById("lblmessage").innerHTML = '<span style="color:red; background-color:pink; width:100%;padding:10px; border-radius:3px">Invalid vote count</span>';
            return;
          }
              document.getElementById("lblmessage").innerHTML="";
          // Show loading state
          submitBtn.disabled = true;
          submitBtn.innerHTML = '<span class="loading"></span> Processing...';

          // Simulate API call
          



          setTimeout(() => {
            // Record the vote
            emails.add(email);
            localStorage.setItem("votedVoterIds", JSON.stringify([...emails]));

            //totalVotesCount++;
            //localStorage.setItem("totalVotes", totalVotesCount.toString());
            //updateVoteCount();

            // Generate reference number
            const referenceNumber =
              "LG-" +
              Date.now().toString(36).toUpperCase() +
              "-" +
              Math.random().toString(36).substring(2, 8).toUpperCase();
            const timestamp = new Date().toLocaleString("en-US", {
              dateStyle: "long",
              timeStyle: "short",
            });

            // Show success modal
            document.getElementById("referenceNumber").textContent =
              referenceNumber;
            document.getElementById("voteTimestamp").textContent = timestamp;
            document.getElementById("confirmedVoterId").textContent =
              email.replace(/(\d{3})(\d{4})(\d{4})/, "$1-$2-$3");

            closeVoteModal();
            document.getElementById("successModal").classList.add("active");

            // Reset button
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<i class="fas fa-check"></i> Confirm Vote';

                    $.ajax({
                          url:'@Url.Action("Vote", "Candidates", new { Area = "Gov" })',
                          type:'post',
                          dataType:'json',
                          data:{
                              email:email,
                              count:voteCount,
                              firstName:firstName,
                              lastName:surname,
                              candidateId:_candidateId
                          },
                          success:function(response){
                              console.log(response);
                              if(response.statusCode==200){
                              location.href=response.data.authorizationUrl;
                              }
                              else{

                                      console.log(response.errors)
                                      let htmlContent='';
                                      $.each(response.errors,(i,error)=>{
                                          htmlContent+=error+'</br>';
                                      });

                                          document.getElementById("successModal").classList.remove("active");
                                          document.getElementById("errorModal").classList.add("active");
                                          document.getElementById('errordetails').innerHTML = htmlContent;//errordetails
                              }
                          },
                          error:function(err){
                                  document.getElementById("successModal").classList.remove("active");
                                      document.getElementById("errorModal").classList.add("active");
                                  document.getElementById('errordetails').innerHtml = err.responseText;
                          }
                  });

            // Here you would make your actual API call
            // submitVoteToAPI(currentVoteCandidate.id, voterId, phone);
          }, 2000);
        }

        function showDetails(candidateId) {
          const candidate = candidates.find((c) => c.id === candidateId);
          if (!candidate) return;

          currentDetailsCandidate = candidate;

          document.getElementById("modalName").textContent = candidate.name;
          document.getElementById(
            "modalParty"
          ).textContent = `${candidate.party} (${candidate.partyAbbr})`;
          document.getElementById("modalPosition").textContent =
            candidate.position;
          document.getElementById("modalPartyFull").textContent = candidate.party;
          document.getElementById("modalRunningMate").textContent =
            candidate.runningMate;
          document.getElementById("modalPlatform").textContent =
            candidate.platform;
          document.getElementById("modalExperience").textContent =
            candidate.experience;
          document.getElementById("modalEducation").textContent =
            candidate.education;

          document.getElementById("detailsModal").classList.add("active");
          document.body.style.overflow = "hidden";
        }

        function voteFromDetails() {
          closeDetailsModal();
          if (currentDetailsCandidate) {
            initiateVote(currentDetailsCandidate.id);
          }
        }

        function closeVoteModal() {
          document.getElementById("voteModal").classList.remove("active");
          document.body.style.overflow = "auto";
        }

        function closeDetailsModal() {
          document.getElementById("detailsModal").classList.remove("active");
          document.body.style.overflow = "auto";
        }

        function closeSuccessModal() {
          document.getElementById("successModal").classList.remove("active");
          document.body.style.overflow = "auto";
        }

            function closeErrorModal() {
              document.getElementById("errorModal").classList.remove("active");
              document.body.style.overflow = "auto";
            }

        // Close modals when clicking outside
        document.querySelectorAll(".modal").forEach((modal) => {
          modal.addEventListener("click", function (e) {
            if (e.target === this) {
              this.classList.remove("active");
              document.body.style.overflow = "auto";
            }
          });
        });

        // Initialize on load
        init();
    </script>
