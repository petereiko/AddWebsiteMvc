@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Confirmation</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        @@import url('https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&family=Poppins:wght@300;400;600;700&display=swap');

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
            overflow: hidden;
        }

        /* Animated background elements */
        body::before {
            content: '';
            position: fixed;
            top: -50%;
            right: -50%;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle, rgba(5, 150, 105, 0.08) 1px, transparent 1px);
            background-size: 50px 50px;
            animation: float 20s ease-in-out infinite;
            pointer-events: none;
            z-index: 0;
        }

        @@keyframes float {
            0%, 100%

        {
            transform: translate(0, 0);
        }

        50% {
            transform: translate(30px, 30px);
        }

        }

        .container {
            position: relative;
            z-index: 1;
            width: 100%;
            max-width: 500px;
        }

        .card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            padding: 48px 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.2);
            animation: slideIn 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        @@keyframes slideIn {
            from

        {
            opacity: 0;
            transform: translateY(40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .header {
            text-align: center;
            margin-bottom: 40px;
            animation: fadeInDown 0.8s ease 0.2s both;
        }

        @@keyframes fadeInDown {
            from

        {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .icon-wrapper {
            width: 80px;
            height: 80px;
            margin: 0 auto 20px;
            background: linear-gradient(135deg, #059669 0%, #10b981 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 40px;
            box-shadow: 0 10px 30px rgba(5, 150, 105, 0.3);
            animation: pulse 2s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100%

        {
            box-shadow: 0 10px 30px rgba(5, 150, 105, 0.3);
        }

        50% {
            box-shadow: 0 10px 50px rgba(5, 150, 105, 0.6);
        }

        }

        h1 {
            font-size: 28px;
            font-weight: 700;
            color: #1a1a2e;
            margin-bottom: 8px;
            letter-spacing: -0.5px;
        }

        .subtitle {
            font-size: 14px;
            color: #666;
            font-weight: 300;
        }

        .form-group {
            margin-bottom: 28px;
            animation: fadeInUp 0.8s ease 0.3s both;
        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        label {
            display: block;
            font-size: 12px;
            font-weight: 600;
            color: #1a1a2e;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        input {
            width: 100%;
            padding: 14px 18px;
            border: 2px solid #e5e5e5;
            border-radius: 12px;
            font-size: 16px;
            font-family: 'Space Mono', monospace;
            transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
            background: #f8f9fa;
            color: #1a1a2e;
        }

            input:focus {
                outline: none;
                border-color: #059669;
                background: #fff;
                box-shadow: 0 0 0 4px rgba(5, 150, 105, 0.1);
                transform: translateY(-2px);
            }

            input::placeholder {
                color: #999;
            }

        .status-message {
            min-height: 20px;
            font-size: 12px;
            margin-top: 8px;
            font-weight: 500;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

            .status-message.error {
                color: #e74c3c;
                opacity: 1;
            }

            .status-message.success {
                color: #27ae60;
                opacity: 1;
            }

        .button {
            width: 100%;
            padding: 16px 24px;
            background: linear-gradient(135deg, #059669 0%, #10b981 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            font-family: 'Poppins', sans-serif;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
            text-transform: uppercase;
            letter-spacing: 1px;
            position: relative;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(5, 150, 105, 0.3);
            animation: fadeInUp 0.8s ease 0.4s both;
        }

            .button::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: rgba(255, 255, 255, 0.2);
                transition: left 0.5s ease;
            }

            .button:hover:not(:disabled) {
                transform: translateY(-3px);
                box-shadow: 0 15px 40px rgba(5, 150, 105, 0.5);
            }

                .button:hover:not(:disabled)::before {
                    left: 100%;
                }

            .button:active:not(:disabled) {
                transform: translateY(-1px);
            }

            .button:disabled {
                opacity: 0.6;
                cursor: not-allowed;
            }

            .button.loading {
                pointer-events: none;
            }

        .spinner {
            display: inline-block;
            width: 14px;
            height: 14px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top-color: white;
            animation: spin 0.8s linear infinite;
            margin-right: 8px;
            vertical-align: middle;
        }

        @@keyframes spin {
            to

        {
            transform: rotate(360deg);
        }

        }

        .result-box {
            margin-top: 30px;
            padding: 20px;
            border-radius: 12px;
            font-size: 14px;
            display: none;
            animation: slideDown 0.5s ease;
        }

        @@keyframes slideDown {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .result-box.show {
            display: block;
        }

        .result-box.success {
            background: #d1fae5;
            border: 1px solid #a7f3d0;
            color: #065f46;
        }

        .result-box.error {
            background: #fee2e2;
            border: 1px solid #fecaca;
            color: #7f1d1d;
        }

        .info-text {
            font-size: 12px;
            color: #999;
            text-align: center;
            margin-top: 24px;
            animation: fadeIn 1s ease 0.5s both;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        /* Responsive */
        @@media (max-width: 480px) {
            .card

        {
            padding: 32px 24px;
        }

        h1 {
            font-size: 24px;
        }

        .icon-wrapper {
            width: 70px;
            height: 70px;
            font-size: 32px;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="header">
                <div class="icon-wrapper">💳</div>
                <h1>Confirm Payment</h1>
                <p class="subtitle">Enter your payment reference to proceed</p>
            </div>

            <form id="paymentForm">
                <div class="form-group">
                    <label for="reference">Payment Reference</label>
                    <input type="text"
                           id="reference"
                           name="reference"
                           placeholder="e.g., PAY-2024-001234"
                           required>
                    <div class="status-message" id="refError"></div>
                </div>

                <button type="submit" class="button" id="confirmBtn">
                    Confirm Payment
                </button>

                <div class="result-box" id="resultBox"></div>

                <p class="info-text">🔒 Your payment is secure and encrypted</p>
                <p class="info-text"><a asp-action="Index" asp-controller="Contestant" asp-area="Admin">Back Candidates</a></p>
            </form>
        </div>
    </div>

    <script>
        const form = document.getElementById('paymentForm');
        const referenceInput = document.getElementById('reference');
        const confirmBtn = document.getElementById('confirmBtn');
        const resultBox = document.getElementById('resultBox');
        const refError = document.getElementById('refError');

        // Input validation
        referenceInput.addEventListener('input', (e) => {
            const value = e.target.value.trim();

            if (value.length === 0) {
                refError.textContent = '';
                refError.classList.remove('error', 'success');
            } else if (value.length < 6) {
                refError.textContent = '❌ Reference must be at least 6 characters';
                refError.classList.remove('success');
                refError.classList.add('error');
            } else {
                refError.textContent = '✓ Reference looks valid';
                refError.classList.remove('error');
                refError.classList.add('success');
            }
        });

        // Form submission
        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const reference = referenceInput.value.trim();

            // Validation
            if (!reference) {
                showError('Please enter a payment reference');
                return;
            }

            if (reference.length < 6) {
                showError('Payment reference must be at least 6 characters long');
                return;
            }

            // Simulate API call
            await simulatePaymentConfirmation(reference);
        });

        async function simulatePaymentConfirmation(reference) {
            // Show loading state
            confirmBtn.disabled = true;
            confirmBtn.classList.add('loading');
            confirmBtn.innerHTML = '<span class="spinner"></span>Confirming...';
            resultBox.classList.remove('show');

            try {
                console.log(reference);
                // Make API call to .NET Core controller
                const response = await fetch('/admin/payment/do', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        reference: reference
                    })
                });

                const data = await response.json();

                console.log(data);

                if (response.ok && data.success) {
                    showSuccess(reference, data.message || 'Payment confirmed successfully');
                } else {
                    showError(data.message || 'Unable to confirm payment. Please try again.');
                }
            } catch (error) {
                console.error('Error confirming payment:', error);
                showError('Network error. Please check your connection and try again.');
            } finally {
                // Reset button
                confirmBtn.disabled = false;
                confirmBtn.classList.remove('loading');
                confirmBtn.textContent = 'Confirm Payment';
            }
        }

        function showSuccess(reference, message) {
            resultBox.classList.add('show', 'success');
            resultBox.classList.remove('error');
            resultBox.innerHTML = `
                <strong>✓ Payment Confirmed!</strong><br>
                Reference: <code style="background: rgba(0,0,0,0.1); padding: 2px 6px; border-radius: 4px;">${reference}</code><br>
                ${message}
            `;

            // Reset form after 3 seconds
            setTimeout(() => {
                form.reset();
                refError.textContent = '';
                refError.classList.remove('error', 'success');
                resultBox.classList.remove('show');
            }, 3000);
        }

        function showError(message) {
            resultBox.classList.add('show', 'error');
            resultBox.classList.remove('success');
            resultBox.innerHTML = `<strong>✗ Error</strong><br>${message}`;
        }

        // Clear result box when user starts typing
        referenceInput.addEventListener('focus', () => {
            if (resultBox.classList.contains('show')) {
                resultBox.classList.remove('show');
            }
        });
    </script>
</body>
</html>