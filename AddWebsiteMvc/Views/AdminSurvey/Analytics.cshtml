@using AddWebsiteMvc.Business.Enums
@using AddWebsiteMvc.Business.Models.SurveyModels.AdminDto
@model SurveyAnalyticsDto
@{
    ViewData["Title"] = $"{Model.Title} - Analytics";
    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="analytics-dashboard">
    <div class="analytics-header">
        <a href="@Url.Action("Index")" class="back-link">
            <i class="icon-arrow-left"></i> Back to Surveys
        </a>
        <h1 class="analytics-title">@Model.Title</h1>
        <p class="analytics-subtitle">@Model.Description</p>
    </div>

    <div class="metrics-grid">
        <div class="metric-card primary">
            <div class="metric-icon">📧</div>
            <div class="metric-content">
                <div class="metric-value">@Model.TotalInvites</div>
                <div class="metric-label">Invites Sent</div>
            </div>
        </div>

        <div class="metric-card success">
            <div class="metric-icon">📬</div>
            <div class="metric-content">
                <div class="metric-value">@Model.EmailsOpened</div>
                <div class="metric-label">Emails Opened</div>
                <div class="metric-percentage">@Model.OpenRate% open rate</div>
            </div>
        </div>

        <div class="metric-card info">
            <div class="metric-icon">🔗</div>
            <div class="metric-content">
                <div class="metric-value">@Model.LinksClicked</div>
                <div class="metric-label">Links Clicked</div>
                <div class="metric-percentage">@Model.ClickRate% click rate</div>
            </div>
        </div>

        <div class="metric-card warning">
            <div class="metric-icon">📝</div>
            <div class="metric-content">
                <div class="metric-value">@Model.SurveysStarted</div>
                <div class="metric-label">Surveys Started</div>
                <div class="metric-percentage">@Model.StartRate% start rate</div>
            </div>
        </div>

        <div class="metric-card completed">
            <div class="metric-icon">✅</div>
            <div class="metric-content">
                <div class="metric-value">@Model.SurveysCompleted</div>
                <div class="metric-label">Surveys Completed</div>
                <div class="metric-percentage">@Model.CompletionRate% completion rate</div>
            </div>
        </div>

        <div class="metric-card time">
            <div class="metric-icon">⏱️</div>
            <div class="metric-content">
                <div class="metric-value">@Model.AvgCompletionTimeMinutes.ToString("F1")</div>
                <div class="metric-label">Avg Minutes</div>
                <div class="metric-percentage">to complete</div>
            </div>
        </div>
    </div>

    <div class="charts-section">
        <div class="chart-card full-width">
            <div class="chart-header">
                <h2 class="chart-title">Conversion Funnel</h2>
                <p class="chart-subtitle">Journey from invitation to completion</p>
            </div>
            <div class="funnel-container">
                <div class="funnel-step" style="width: 100%">
                    <div class="funnel-bar" style="background: #3b82f6">
                        <div class="funnel-label">@Model.TotalInvites Invites Sent</div>
                    </div>
                </div>
                <div class="funnel-step" style="width: @((decimal)Model.EmailsOpened / Model.TotalInvites * 100)%">
                    <div class="funnel-bar" style="background: #8b5cf6">
                        <div class="funnel-label">@Model.EmailsOpened Opened (@Model.OpenRate%)</div>
                    </div>
                </div>
                <div class="funnel-step" style="width: @((decimal)Model.LinksClicked / Model.TotalInvites * 100)%">
                    <div class="funnel-bar" style="background: #ec4899">
                        <div class="funnel-label">@Model.LinksClicked Clicked (@Model.ClickRate%)</div>
                    </div>
                </div>
                <div class="funnel-step" style="width: @((decimal)Model.SurveysStarted / Model.TotalInvites * 100)%">
                    <div class="funnel-bar" style="background: #f59e0b">
                        <div class="funnel-label">@Model.SurveysStarted Started (@Model.StartRate%)</div>
                    </div>
                </div>
                <div class="funnel-step" style="width: @((decimal)Model.SurveysCompleted / Model.TotalInvites * 100)%">
                    <div class="funnel-bar" style="background: #10b981">
                        <div class="funnel-label">@Model.SurveysCompleted Completed (@Model.CompletionRate%)</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="questions-analysis">
        <div class="section-header">
            <h2 class="section-title">Question Analysis</h2>
            <a href="@Url.Action("Export", new { surveyId = Model.SurveyId })" class="export-btn">
                <i class="icon-download"></i> Export to Excel
            </a>
        </div>

        @foreach (var question in Model.Questions)
        {
            <div class="question-card">
                <div class="question-header">
                    <h3 class="question-title">@question.QuestionText</h3>
                    <span class="question-type">@question.QuestionType</span>
                </div>
                <div class="question-stats">
                    <span class="answer-count">@question.TotalAnswers responses</span>
                </div>

                @if (question.QuestionType == QuestionType.MultipleChoice || question.QuestionType == QuestionType.YesNo)
                {
                    <div class="options-chart">
                        @foreach (var option in question.OptionCounts.OrderByDescending(x => x.Value))
                        {
                            var percentage = question.TotalAnswers > 0 ? (decimal)option.Value / question.TotalAnswers * 100 : 0;
                            <div class="option-row">
                                <div class="option-label">@option.Key</div>
                                <div class="option-bar-container">
                                    <div class="option-bar" style="width: @percentage%"></div>
                                </div>
                                <div class="option-value">@option.Value (@percentage.ToString("F1")%)</div>
                            </div>
                        }
                    </div>
                }
                else if (question.QuestionType == QuestionType.Scale || question.QuestionType == QuestionType.Rating)
                {
                    <div class="scale-summary">
                        <div class="average-score">
                            <div class="score-label">Average Score</div>
                            <div class="score-value">@question.AverageScore?.ToString("F2")</div>
                        </div>
                        <div class="scale-distribution">
                            @foreach (var score in question.ScoreDistribution.OrderBy(x => x.Key))
                            {
                                var percentage = question.TotalAnswers > 0 ? (decimal)score.Value / question.TotalAnswers * 100 : 0;
                                <div class="scale-bar-item">
                                    <div class="scale-number">@score.Key</div>
                                    <div class="scale-bar">
                                        <div class="scale-fill" style="width: @percentage%; height: @(score.Value * 3)px"></div>
                                    </div>
                                    <div class="scale-count">@score.Value</div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else if (question.QuestionType == QuestionType.Text)
                {
                    <div class="text-responses">
                        @if (question.TextResponses.Any())
                        {
                            <div class="responses-header">Recent responses:</div>
                            @foreach (var response in question.TextResponses.Take(5))
                            {
                                <div class="text-response-item">
                                    <i class="icon-quote"></i>
                                    <span>@response</span>
                                </div>
                            }
                            @if (question.TextResponses.Count > 5)
                            {
                                <div class="more-responses">
                                    + @(question.TextResponses.Count - 5) more responses
                                </div>
                            }
                        }
                        else
                        {
                            <div class="no-responses">No text responses yet</div>
                        }
                    </div>
                }
            </div>
        }
    </div>

    <div class="actions-footer">
        <a href="@Url.Action("Responses", new { surveyId = Model.SurveyId })" class="btn-action primary">
            View All Responses
        </a>
        <a href="@Url.Action("Index")" class="btn-action secondary">
            Back to Dashboard
        </a>
    </div>
</div>

