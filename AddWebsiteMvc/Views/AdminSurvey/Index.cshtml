<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Filter Toggle
        const filterBtn = document.getElementById('filterBtn');
        const filterPanel = document.getElementById('filterPanel');
        const closeFilter = document.getElementById('closeFilter');

        filterBtn.addEventListener('click', () => {
            filterPanel.style.display = filterPanel.style.display === 'none' ? 'block' : 'none';
        });

        closeFilter.addEventListener('click', () => {
            filterPanel.style.display = 'none';
        });

        // Range Input
        const completionFilter = document.getElementById('completionFilter');
        const completionValue = document.getElementById('completionValue');

        completionFilter.addEventListener('input', function() {
            completionValue.textContent = this.value + '%';
        });

        // Refresh Button
        document.getElementById('refreshBtn').addEventListener('click', () => {
            location.reload();
        });

        // Filter Logic
        document.getElementById('applyFilters').addEventListener('click', applyFilters);
        document.getElementById('clearFilters').addEventListener('click', clearFilters);

        function applyFilters() {
            const status = document.getElementById('statusFilter').value;
            const search = document.getElementById('searchFilter').value.toLowerCase();
            const minCompletion = parseInt(document.getElementById('completionFilter').value);
            const sortBy = document.getElementById('sortFilter').value;

            let cards = Array.from(document.querySelectorAll('.survey-card'));

            // Filter
            cards.forEach(card => {
                let show = true;

                if (status && card.dataset.status !== status) show = false;
                if (search && !card.dataset.title.includes(search)) show = false;
                if (parseInt(card.dataset.completion) < minCompletion) show = false;

                card.style.display = show ? 'block' : 'none';
            });

            // Sort
            cards = cards.filter(c => c.style.display !== 'none');

            cards.sort((a, b) => {
                switch(sortBy) {
                    case 'responses':
                        return parseInt(b.dataset.responses) - parseInt(a.dataset.responses);
                    case 'completion':
                        return parseInt(b.dataset.completion) - parseInt(a.dataset.completion);
                    case 'title':
                        return a.dataset.title.localeCompare(b.dataset.title);
                    default:
                        return 0;
                }
            });

            const grid = document.getElementById('surveysGrid');
            cards.forEach(card => grid.appendChild(card));
        }

        function clearFilters() {
            document.getElementById('statusFilter').value = '';
            document.getElementById('searchFilter').value = '';
            document.getElementById('completionFilter').value = '0';
            document.getElementById('completionValue').textContent = '0%';
            document.getElementById('sortFilter').value = 'date';

            document.querySelectorAll('.survey-card').forEach(card => {
                card.style.display = 'block';
            });
        }

        // Alert Close
        document.querySelectorAll('.alert-close').forEach(btn => {
            btn.addEventListener('click', function() {
                this.closest('.alert').style.display = 'none';
            });
        });

        // Animate progress bars on load
        setTimeout(() => {
            document.querySelectorAll('.progress-fill').forEach(bar => {
                const percentage = bar.dataset.percentage;
                bar.style.width = percentage + '%';
            });
        }, 100);
    });
</script>
































































