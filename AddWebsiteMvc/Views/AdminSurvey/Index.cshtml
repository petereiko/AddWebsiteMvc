@using AddWebsiteMvc.Business.Models.SurveyModels.AdminDto
@model List<SurveyOverviewDto>
@{
    ViewData["Title"] = "Survey Management";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

<div class="admin-dashboard">
    

    <!-- Header Section -->
    <div class="dashboard-header">
        <div class="header-content">
            <div class="title-section">
                <h1 class="dashboard-title">Survey Analytics Dashboard</h1>
                <p class="dashboard-subtitle">Real-time monitoring and insights into voter feedback</p>
            </div>

            <div class="header-stats">
                <div class="stat-card">
                    <div class="stat-icon green">
                        <i class="fas fa-poll-h"></i>
                    </div>
                    <div class="stat-details">
                        <div class="stat-value">@Model.Sum(s => s.TotalResponses)</div>
                        <div class="stat-label">Total Responses</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon success">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-details">
                        <div class="stat-value">@Model.Sum(s => s.CompletedResponses)</div>
                        <div class="stat-label">Completed Surveys</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon active">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <div class="stat-details">
                        <div class="stat-value">@Model.Count(s => s.IsActive)</div>
                        <div class="stat-label">Active Surveys</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon pending">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="stat-details">
                        <div class="stat-value">@Model.Sum(s => s.PendingResponses)</div>
                        <div class="stat-label">Pending</div>
                    </div>
                </div>
            </div>
            <br />
            <!-- Top Control Bar -->
            <div class="control-bar">
                <div class="control-bar-content">
                    <div class="dashboard-breadcrumb">
                        <i class="fas fa-chart-line"></i>
                        <span>Admin</span>
                        <i class="fas fa-chevron-right"></i>
                        <span class="active">Survey Analytics</span>
                    </div>

                    <div class="control-actions">
                        <button class="control-btn" id="refreshBtn">
                            <i class="fas fa-sync-alt"></i>
                            <span>Refresh</span>
                        </button>
                        <button class="control-btn" id="filterBtn">
                            <i class="fas fa-filter"></i>
                            <span>Filters</span>
                        </button>
                        <button class="control-btn primary" id="exportAllBtn">
                            <i class="fas fa-download"></i>
                            <span>Export All</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    

    <!-- Filter Panel (Hidden by default) -->
    <div class="filter-panel" id="filterPanel" style="display: none;">
        <div class="filter-content">
            <div class="filter-header">
                <h3><i class="fas fa-sliders-h"></i> Advanced Filters</h3>
                <button class="close-filter" id="closeFilter">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div class="filter-grid">
                <div class="filter-group">
                    <label><i class="fas fa-toggle-on"></i> Status</label>
                    <select class="filter-select" id="statusFilter">
                        <option value="">All Surveys</option>
                        <option value="active">Active Only</option>
                        <option value="inactive">Closed Only</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label><i class="fas fa-sort-amount-down"></i> Sort By</label>
                    <select class="filter-select" id="sortFilter">
                        <option value="date">Creation Date</option>
                        <option value="responses">Total Responses</option>
                        <option value="completion">Completion Rate</option>
                        <option value="title">Survey Title</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label><i class="fas fa-search"></i> Search</label>
                    <input type="text" class="filter-input" id="searchFilter" placeholder="Search surveys...">
                </div>

                <div class="filter-group">
                    <label><i class="fas fa-percentage"></i> Min Completion Rate</label>
                    <input type="range" class="filter-range" id="completionFilter" min="0" max="100" value="0">
                    <span class="range-value" id="completionValue">0%</span>
                </div>
            </div>

            <div class="filter-actions">
                <button class="filter-btn clear" id="clearFilters">
                    <i class="fas fa-eraser"></i> Clear All
                </button>
                <button class="filter-btn apply" id="applyFilters">
                    <i class="fas fa-check"></i> Apply Filters
                </button>
            </div>
        </div>
    </div>

    <div class="surveys-container">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-error">
                <i class="fas fa-exclamation-triangle"></i>
                <div class="alert-content">
                    <strong>Error</strong>
                    <p>@TempData["ErrorMessage"]</p>
                </div>
                <button class="alert-close">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <h2>No Surveys Available</h2>
                <p>You haven't created any surveys yet. Start collecting valuable feedback from your voters.</p>
                <button class="empty-action">
                    <i class="fas fa-plus-circle"></i>
                    Create Your First Survey
                </button>
            </div>
        }
        else
        {
            <div class="surveys-grid" id="surveysGrid">
                @foreach (var survey in Model)
                {
                    <div class="survey-card @(survey.IsActive ? "active" : "inactive")"
                         data-status="@(survey.IsActive ? "active" : "inactive")"
                         data-completion="@survey.CompletionRate"
                         data-responses="@survey.TotalResponses"
                         data-title="@survey.Title.ToLower()">

                        <div class="survey-header">
                            <div class="survey-title-section">
                                <h3 class="survey-title">@survey.Title</h3>
                                <span class="survey-badge @(survey.IsActive ? "badge-active" : "badge-inactive")">
                                    <i class="fas fa-circle"></i>
                                    @(survey.IsActive ? "Active" : "Closed")
                                </span>
                            </div>
                            @if (!string.IsNullOrEmpty(survey.Description))
                            {
                                <p class="survey-description">@survey.Description</p>
                            }
                        </div>

                        <div class="survey-metrics">
                            <div class="metric-item">
                                <div class="metric-icon">
                                    <i class="fas fa-users"></i>
                                </div>
                                <div class="metric-data">
                                    <span class="metric-value">@survey.TotalResponses</span>
                                    <span class="metric-label">Total</span>
                                </div>
                            </div>

                            <div class="metric-item success">
                                <div class="metric-icon">
                                    <i class="fas fa-check-double"></i>
                                </div>
                                <div class="metric-data">
                                    <span class="metric-value">@survey.CompletedResponses</span>
                                    <span class="metric-label">Completed</span>
                                </div>
                            </div>

                            <div class="metric-item warning">
                                <div class="metric-icon">
                                    <i class="fas fa-hourglass-half"></i>
                                </div>
                                <div class="metric-data">
                                    <span class="metric-value">@survey.PendingResponses</span>
                                    <span class="metric-label">Pending</span>
                                </div>
                            </div>

                            <div class="metric-item rate">
                                <div class="metric-icon">
                                    <i class="fas fa-chart-pie"></i>
                                </div>
                                <div class="metric-data">
                                    <span class="metric-value">@survey.CompletionRate%</span>
                                    <span class="metric-label">Rate</span>
                                </div>
                            </div>
                        </div>

                        <div class="progress-section">
                            <div class="progress-header">
                                <span class="progress-label">Completion Progress</span>
                                <span class="progress-percentage">@survey.CompletionRate%</span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill"
                                     style="width: @survey.CompletionRate%"
                                     data-percentage="@survey.CompletionRate"></div>
                            </div>
                        </div>

                        <div class="survey-actions">
                            <a href="@Url.Action("Analytics", new { surveyId = survey.SurveyId })" class="action-btn primary">
                                <i class="fas fa-chart-line"></i>
                                <span>Analytics</span>
                            </a>
                            <a href="@Url.Action("Responses", new { surveyId = survey.SurveyId })" class="action-btn secondary">
                                <i class="fas fa-list-alt"></i>
                                <span>Responses</span>
                            </a>
                            <a href="@Url.Action("Export", new { surveyId = survey.SurveyId })" class="action-btn outline">
                                <i class="fas fa-file-excel"></i>
                                <span>Export</span>
                            </a>
                        </div>

                        <div class="survey-footer">
                            <div class="footer-item">
                                <i class="fas fa-calendar-plus"></i>
                                <span>Created @survey.CreatedAt.ToString("MMM dd, yyyy")</span>
                            </div>
                            @if (survey.EndDate.HasValue)
                            {
                                <div class="footer-item">
                                    <i class="fas fa-calendar-times"></i>
                                    <span>Ends @survey.EndDate.Value.ToString("MMM dd, yyyy")</span>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    :root {
        --primary-green: #198754;
        --dark-green: #146c43;
        --light-green: #d1fae5;
        --success-green: #10b981;
        --warning-amber: #f59e0b;
        --danger-red: #ef4444;
        --dark-text: #0f172a;
        --medium-text: #475569;
        --light-text: #94a3b8;
        --border-light: #e2e8f0;
        --bg-light: #f8fafc;
        --bg-white: #ffffff;
        --shadow-sm: 0 1px 3px rgba(0,0,0,0.05);
        --shadow-md: 0 4px 12px rgba(0,0,0,0.08);
        --shadow-lg: 0 10px 30px rgba(0,0,0,0.12);
        --shadow-xl: 0 20px 40px rgba(0,0,0,0.15);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .admin-dashboard {
        margin-top: inherit;
        min-height: 100vh;
        background: var(--bg-light);
        font-family: 'Outfit', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        padding-bottom: 60px;
    }

    /* Control Bar */
    .control-bar {
        background: var(--bg-white);
        border-bottom: 1px solid var(--border-light);
        position: sticky;
        top: 0;
        z-index: 100;
        box-shadow: var(--shadow-sm);
    }

    .control-bar-content {
        max-width: 1600px;
        margin: 0 auto;
        padding: 16px 24px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .dashboard-breadcrumb {
        display: flex;
        align-items: center;
        gap: 12px;
        color: var(--medium-text);
        font-size: 14px;
        font-weight: 500;
    }

        .dashboard-breadcrumb .fa-chart-line {
            color: var(--primary-green);
        }

        .dashboard-breadcrumb .active {
            color: var(--dark-text);
            font-weight: 600;
        }

        .dashboard-breadcrumb .fa-chevron-right {
            font-size: 10px;
            color: var(--light-text);
        }

    .control-actions {
        display: flex;
        gap: 12px;
    }

    .control-btn {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        border: 1px solid var(--border-light);
        background: var(--bg-white);
        color: var(--dark-text);
        font-size: 14px;
        font-weight: 600;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.2s;
    }

        .control-btn:hover {
            border-color: var(--primary-green);
            color: var(--primary-green);
            transform: translateY(-1px);
            box-shadow: var(--shadow-md);
        }

        .control-btn.primary {
            background: var(--primary-green);
            border-color: var(--primary-green);
            color: white;
        }

            .control-btn.primary:hover {
                background: var(--dark-green);
                border-color: var(--dark-green);
                color: white;
            }

    /* Header Section */
    .dashboard-header {
        margin-top: 150px;
        margin-bottom: 40px;
    }

    .header-content {
        max-width: 1600px;
        margin: 0 auto;
        padding: 0 24px;
    }

    .title-section {
        margin-bottom: 32px;
    }

    .dashboard-title {
        font-size: 42px;
        font-weight: 800;
        color: var(--dark-text);
        margin-bottom: 8px;
        letter-spacing: -0.5px;
    }

    .dashboard-subtitle {
        font-size: 16px;
        color: var(--medium-text);
        font-weight: 500;
    }

    .header-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 24px;
    }

    .stat-card {
        background: var(--bg-white);
        padding: 24px;
        border-radius: 16px;
        border: 1px solid var(--border-light);
        display: flex;
        align-items: center;
        gap: 20px;
        transition: all 0.3s;
        box-shadow: var(--shadow-sm);
    }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-lg);
            border-color: var(--primary-green);
        }

    .stat-icon {
        width: 64px;
        height: 64px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 26px;
        flex-shrink: 0;
    }

        .stat-icon.green {
            background: linear-gradient(135deg, #198754 0%, #28a745 100%);
            color: white;
        }

        .stat-icon.success {
            background: linear-gradient(135deg, #10b981 0%, #14b8a6 100%);
            color: white;
        }

        .stat-icon.active {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            color: white;
        }

        .stat-icon.pending {
            background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);
            color: white;
        }

    .stat-details {
        flex: 1;
    }

    .stat-value {
        font-size: 36px;
        font-weight: 900;
        color: var(--dark-text);
        display: block;
        line-height: 1;
        margin-bottom: 6px;
    }

    .stat-label {
        font-size: 13px;
        color: var(--medium-text);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Filter Panel */
    .filter-panel {
        max-width: 1600px;
        margin: 0 auto 32px;
        padding: 0 24px;
        animation: slideDown 0.3s ease;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .filter-content {
        background: var(--bg-white);
        border: 1px solid var(--border-light);
        border-radius: 16px;
        padding: 24px;
        box-shadow: var(--shadow-md);
    }

    .filter-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

        .filter-header h3 {
            font-size: 18px;
            font-weight: 700;
            color: var(--dark-text);
            display: flex;
            align-items: center;
            gap: 10px;
        }

    .close-filter {
        background: none;
        border: none;
        color: var(--medium-text);
        cursor: pointer;
        padding: 8px;
        border-radius: 6px;
        transition: all 0.2s;
    }

        .close-filter:hover {
            background: var(--bg-light);
            color: var(--dark-text);
        }

    .filter-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 20px;
    }

    .filter-group label {
        display: block;
        font-size: 13px;
        font-weight: 600;
        color: var(--dark-text);
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .filter-select,
    .filter-input {
        width: 100%;
        padding: 12px 16px;
        border: 1px solid var(--border-light);
        border-radius: 8px;
        font-size: 14px;
        font-family: 'Outfit', sans-serif;
        transition: all 0.2s;
    }

        .filter-select:focus,
        .filter-input:focus {
            outline: none;
            border-color: var(--primary-green);
            box-shadow: 0 0 0 3px rgba(25, 135, 84, 0.1);
        }

    .filter-range {
        width: 100%;
        margin-bottom: 8px;
    }

    .range-value {
        display: inline-block;
        padding: 4px 12px;
        background: var(--light-green);
        color: var(--primary-green);
        border-radius: 6px;
        font-size: 12px;
        font-weight: 700;
    }

    .filter-actions {
        display: flex;
        justify-content: flex-end;
        gap: 12px;
    }

    .filter-btn {
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .filter-btn.clear {
            background: var(--bg-light);
            color: var(--medium-text);
        }

            .filter-btn.clear:hover {
                background: #e5e7eb;
            }

        .filter-btn.apply {
            background: var(--primary-green);
            color: white;
        }

            .filter-btn.apply:hover {
                background: var(--dark-green);
            }

    /* Surveys Container */
    .surveys-container {
        max-width: 1600px;
        margin: 0 auto;
        padding: 0 24px;
    }

    .surveys-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(420px, 1fr));
        gap: 24px;
    }

    .survey-card {
        background: var(--bg-white);
        border: 1px solid var(--border-light);
        border-radius: 16px;
        padding: 28px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: var(--shadow-sm);
        position: relative;
        overflow: hidden;
    }

        .survey-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: transparent;
            transition: all 0.3s;
        }

        .survey-card.active::before {
            background: var(--success-green);
        }

        .survey-card:hover {
            transform: translateY(-6px);
            box-shadow: var(--shadow-xl);
            border-color: var(--primary-green);
        }

    .survey-header {
        margin-bottom: 24px;
    }

    .survey-title-section {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 12px;
        gap: 16px;
    }

    .survey-title {
        font-size: 20px;
        font-weight: 700;
        color: var(--dark-text);
        flex: 1;
        line-height: 1.3;
    }

    .survey-badge {
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        gap: 6px;
        flex-shrink: 0;
    }

        .survey-badge .fa-circle {
            font-size: 6px;
        }

    .badge-active {
        background: var(--light-green);
        color: #065f46;
    }

    .badge-inactive {
        background: #fee2e2;
        color: #991b1b;
    }

    .survey-description {
        font-size: 14px;
        color: var(--medium-text);
        line-height: 1.6;
    }

    .survey-metrics {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 12px;
        margin-bottom: 24px;
    }

    .metric-item {
        background: var(--bg-light);
        padding: 16px 12px;
        border-radius: 10px;
        text-align: center;
        transition: all 0.2s;
    }

        .metric-item:hover {
            background: #e5e7eb;
        }

    .metric-icon {
        font-size: 20px;
        color: var(--medium-text);
        margin-bottom: 8px;
    }

    .metric-item.success .metric-icon {
        color: var(--success-green);
    }

    .metric-item.warning .metric-icon {
        color: var(--warning-amber);
    }

    .metric-item.rate .metric-icon {
        color: var(--primary-green);
    }

    .metric-value {
        display: block;
        font-size: 24px;
        font-weight: 800;
        color: var(--dark-text);
        line-height: 1;
        margin-bottom: 4px;
    }

    .metric-label {
        display: block;
        font-size: 11px;
        color: var(--medium-text);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .progress-section {
        margin-bottom: 24px;
    }

    .progress-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .progress-label {
        font-size: 13px;
        color: var(--medium-text);
        font-weight: 600;
    }

    .progress-percentage {
        font-size: 13px;
        color: var(--dark-text);
        font-weight: 700;
    }

    .progress-bar {
        height: 10px;
        background: var(--bg-light);
        border-radius: 999px;
        overflow: hidden;
        position: relative;
    }

    .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, var(--primary-green) 0%, var(--success-green) 100%);
        border-radius: 999px;
        transition: width 1s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
    }

        .progress-fill::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            animation: shimmer 2s infinite;
        }

    @@keyframes shimmer {
        0% {
            transform: translateX(-100%);
        }

        100% {
            transform: translateX(100%);
        }
    }

    .survey-actions {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
    }

    .action-btn {
        flex: 1;
        padding: 12px 16px;
        border-radius: 10px;
        font-size: 13px;
        font-weight: 600;
        text-decoration: none;
        text-align: center;
        transition: all 0.2s;
        display: flex;
        align-items: center;
