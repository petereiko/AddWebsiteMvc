        // Create professional SVG stars
        function createProfessionalStars() {
            const positions = [
                { top: '15%', left: '8%', delay: '0s' },
                { top: '25%', left: '92%', delay: '0.5s' },
                { top: '45%', left: '5%', delay: '1s' },
                { top: '55%', left: '95%', delay: '1.5s' },
                { top: '75%', left: '10%', delay: '2s' },
                { top: '85%', left: '88%', delay: '2.5s' }
            ];

            positions.forEach((pos) => {
                const star = document.createElement('div');
                star.classList.add('professional-star');
                star.style.top = pos.top;
                star.style.left = pos.left;
                star.style.animationDelay = pos.delay;

                // Create SVG star
                star.innerHTML = `
