        /*--------------------------------------------------------------
        # Partners Section CSS - Add to existing footer styles
        --------------------------------------------------------------*/

        .partners {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0 20px;
        }

            .partners > div {
                text-align: center;
                max-width: 400px;
            }

            .partners h4 {
                font-size: 28px;
                margin: 0 0 25px 0;
                padding: 0;
                line-height: 1.2;
                font-weight: 700;
                color: #198754;
                position: relative;
                display: inline-block;
            }

                .partners h4::after {
                    content: "";
                    position: absolute;
                    bottom: -8px;
                    left: 50%;
                    transform: translateX(-50%);
                    width: 50px;
                    height: 3px;
                    background: linear-gradient(135deg, #198754, #28a745);
                    border-radius: 2px;
                }

            .partners a {
                display: inline-block;
                padding: 20px 30px;
                background: rgba(255, 255, 255, 0.95);
                border-radius: 15px;
                transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
                box-shadow: 0 5px 20px rgba(25, 135, 84, 0.15);
                border: 2px solid rgba(25, 135, 84, 0.1);
                position: relative;
                overflow: hidden;
            }

                .partners a::before {
                    content: "";
                    position: absolute;
                    top: 0;
                    left: -100%;
                    width: 100%;
                    height: 100%;
                    background: linear-gradient( 90deg, transparent, rgba(25, 135, 84, 0.1), transparent );
                    transition: left 0.6s ease;
                }

                .partners a:hover::before {
                    left: 100%;
                }

                .partners a:hover {
                    transform: translateY(-5px) scale(1.05);
                    box-shadow: 0 10px 30px rgba(25, 135, 84, 0.25);
                    border-color: #198754;
                    text-decoration: none;
                }

            .partners img {
                max-width: 180px;
                height: auto;
                display: block;
                transition: all 0.3s ease;
                filter: grayscale(0%) brightness(1);
            }

            .partners a:hover img {
                filter: grayscale(0%) brightness(1.1);
                transform: scale(1.05);
            }

        /* Multiple partners layout - when you add more partners */
        .partners-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 30px;
            margin-top: 30px;
            padding: 0 20px;
        }

            .partners-grid a {
                display: flex;
                align-items: center;
                justify-content: center;
                padding: 25px;
                background: rgba(255, 255, 255, 0.95);
                border-radius: 15px;
                transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
                box-shadow: 0 5px 20px rgba(25, 135, 84, 0.15);
                border: 2px solid rgba(25, 135, 84, 0.1);
                position: relative;
                overflow: hidden;
                min-height: 120px;
            }

                .partners-grid a::before {
                    content: "";
                    position: absolute;
                    top: 0;
                    left: -100%;
                    width: 100%;
                    height: 100%;
                    background: linear-gradient( 90deg, transparent, rgba(25, 135, 84, 0.1), transparent );
                    transition: left 0.6s ease;
                }

                .partners-grid a:hover::before {
                    left: 100%;
                }

                .partners-grid a:hover {
                    transform: translateY(-5px) scale(1.05);
                    box-shadow: 0 10px 30px rgba(25, 135, 84, 0.25);
                    border-color: #198754;
                    text-decoration: none;
                }

            .partners-grid img {
                max-width: 150px;
                max-height: 80px;
                width: auto;
                height: auto;
                display: block;
                transition: all 0.3s ease;
                filter: grayscale(0%) brightness(1);
            }

            .partners-grid a:hover img {
                filter: grayscale(0%) brightness(1.1);
                transform: scale(1.08);
            }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .partners h4

        {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .partners img {
            max-width: 140px;
        }

        .partners a {
