@{
    ViewData["Title"] = "Survey Not Found";
    // Layout = "_Layout";
}
<style>
    .error-container {
        margin-top:200px;
        margin-bottom:100px;
        min-height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .error-content {
        text-align: center;
        max-width: 600px;
    }

    .error-icon {
        font-size: 80px;
        color: #dc3545;
        margin-bottom: 30px;
    }

    .error-content h1 {
        font-size: 42px;
        font-weight: 800;
        color: #212529;
        margin-bottom: 20px;
    }

    .error-content p {
        font-size: 18px;
        color: #6c757d;
        margin-bottom: 40px;
    }

    .btn-home {
        display: inline-block;
        background: #198754;
        color: white;
        padding: 15px 40px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-home:hover {
            background: #146c43;
            transform: translateY(-2px);
        }
</style>


<div class="error-container">
    <div class="error-content">
        <div class="error-icon">
            <i class="fa fa-exclamation-triangle"></i>
        </div>
        <h1>Survey Not Found</h1>
        <p>The survey link you followed may be invalid or has expired.</p>
        <a href="/" class="btn-home">Return to Home</a>
    </div>
</div>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    