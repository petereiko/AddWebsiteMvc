@{
    ViewData["Title"] = "Thank You!";
    //Layout = "_Layout";
}

<style>
    .thankyou-container {
        margin-top:200px;
        margin-bottom:100px;
        min-height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .thankyou-content {
        text-align: center;
        max-width: 600px;
    }

    .success-icon {
        font-size: 80px;
        color: #198754;
        margin-bottom: 30px;
    }

    .thankyou-content h1 {
        font-size: 42px;
        font-weight: 800;
        color: #212529;
        margin-bottom: 20px;
    }

    .thankyou-content p {
        font-size: 18px;
        color: #6c757d;
        margin-bottom: 15px;
    }

    .subtitle {
        font-size: 16px;
        margin-bottom: 40px;
    }

    .btn-home {
        display: inline-block;
        background: #198754;
        color: white;
        padding: 15px 40px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-home:hover {
            background: #146c43;
            transform: translateY(-2px);
        }
</style>


<div class="thankyou-container">
    <div class="thankyou-content">
        <div class="success-icon">
            <i class="fa fa-check-circle"></i>
        </div>
        <h1>Thank You!</h1>
        <p>Your feedback has been submitted successfully.</p>
        <p class="subtitle">We appreciate you taking the time to help us improve NIGERIA GOVERNORS SCORECARD AWARDS.</p>
        <a asp-action="Index" asp-controller="Home" class="btn-home">Return to Home</a>
    </div>
</div>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
